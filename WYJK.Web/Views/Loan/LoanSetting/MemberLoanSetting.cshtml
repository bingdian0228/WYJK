                            notEmpty: {
                                message: '不能为空'
                            },
                            regexp: {
                                regexp: /^[0-9]+(.[0-9]+)?$/,
                                message: '填写不正确'
                            }
                        }
                    },
                    WeiYueJinPercent: {
                        message: 'The username is not valid',
                        validators: {
                            notEmpty: {
                                message: '不能为空'
                            },
                            regexp: {
                                regexp: /^[0-9]+(.[0-9]+)?$/,
                                message: '填写不正确'
                            }
                        }
                    }
                }
            })
