@model DrawCashModel
@section Footer{
    <style>
    body {
        line-height: 2.6;
    }
    </style>
    <script>
        $(function () {
            $(".Huialert.Huialert-info").fadeOut(2000);
        })
    </script>
}
<div class="pd-20">
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(m => m.DrawCashIds );
        if (string.IsNullOrWhiteSpace(ViewBag.ErrorMessage + "") == false)
        {
            <div class="Huialert Huialert-info">@(ViewBag.ErrorMessage)</div>
        }
        <div class="row cl">
            <label class="form-label col-2">打款方式：</label>
            <div class="formControls col-6">
               <label>银行卡</label>
            </div>

        </div>
        <div class="row cl">
            <label class="form-label col-2">打款金额：</label>
            <div class="formControls col-6">
                @ViewData["money"]
            </div>

        </div>
        <div class="row cl">
            <label class="form-label col-2">打款单号：</label>
            <div class="formControls col-8">
                @Html.TextAreaFor(m => m.OrderNo, new { @class = "input-text" })
            </div>

        </div>
        <div class="row cl">
            <label class="form-label col-2"> </label>
            <div class="col-2">@Html.ValidationMessageFor(m => m.OrderNo)</div>

        </div>

    }

</div>