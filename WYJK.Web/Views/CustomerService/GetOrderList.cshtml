@model List<Order>
<div class="pd-20">
    <div class="mt-20">
        <table class="table table-border table-bordered table-bg table-hover table-sort">
            <thead>
                <tr class="text-c">
                    <th width="80">订单编号</th>
                    <th width="80">状态</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
            {
                    <tr class="text-c">
                        <td>@order.OrderCode</td>
                        <td>@EnumExt.GetEnumCustomDescription((OrderEnum)Convert.ToInt32(order.Status)) </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

