    Layout = "~/Views/_Layout_index_1.cshtml";
}
<!--咨询详情-->
<div class="">
    <div class="am-padding bg-lightgrey">
        <div class="container">
            <a href="/" class="text-muted">
                <span class="bg-white icon-w-box am-text-middle">
                    <i class="icon-w icon-home" aria-hidden="true"></i>
                </span>
                <span class="am-text-middle am-padding-left-xs">HOME</span>
            </a>
            <span>></span>
            <span>如何买</span>
        </div>
    </div>
    <!--banner图-->
    <img src="~/Content/img/PC_banner3.jpg" alt="如何买" width="100%" />
    <div>
        <div class="text-center bg-lightgrey grey">
            <!--<img src="img/b3-buy.jpg" alt="如何买" />-->
            <div class="intro-buy text-center am-padding-horizontal">
                <img src="~/Content/img/buy-1.png" alt="如何购买社保" class="am-margin-top-lg" />
                <div>
                    <p class="text-left">在首页中，直接选择“缴社保”</p>
                    <img src="~/Content/img/buy-2.png" alt="缴社保" />
                </div>
                <div>
                    <p class="text-left">进入添加参保人</p>
                    <img src="~/Content/img/buy-3.png" alt="进入添加参保人" />
