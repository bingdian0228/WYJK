@model List<Information>
@{
ViewBag.Title = "Index";
Layout = "~/Views/_Layout_index.cshtml";
}
<!--咨询列表-->
<div class="info-content container">
    <div class="am-padding bg-lightgrey info-location">
        <a href="/" class="text-muted">
            <span class="bg-white icon-w-box am-text-middle">
                <i class="icon-w icon-home" aria-hidden="true"></i>
            </span>
            <span class="am-text-middle am-padding-left-xs">HOME</span>
        </a>
        <span>></span>
        <span>最新@(Request.Params["Type"])</span>
    </div>
    <!--上拉加载列表-->
    <div class="info-content">
        <ul class="info-list">
            @if (Model != null && Model.Count > 0)
            {
                foreach (var item in Model)
                {
                    <li>
                        <div class="am-text-center am-padding-sm">
                            <a href="@Url.Action("InfoDetail","index")?ID=@item.ID" class="grey am-inline-block">
                                <h4>@item.Name</h4>
                                @*<artical>
                                    @item.StrContent
                                </artical>*@
                                <div class="light-grey">
                                    信息发布于@(item.CreateTime)
                                </div>
                            </a>
                        </div>
                    </li>
                }
            }
        </ul>
    </div>
</div>
