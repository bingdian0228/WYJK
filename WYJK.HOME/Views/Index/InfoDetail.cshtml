@model Information
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_Layout_index.cshtml";
}
<!--咨询详情-->
<div class="info-content container">
    <div class="am-padding bg-lightgrey info-location">
        <a href="/" class="text-muted">
            <span class="bg-white icon-w-box am-text-middle">
                <i class="icon-w icon-home" aria-hidden="true"></i>
            </span>
            <span class="am-text-middle am-padding-left-xs">HOME</span>
        </a>
        <span>></span>
        <span><a href="@Url.Action("InfoList","index")?Type=@(Model.Type)" class="text-muted">最新@(Model.Type)</a></span>
        <span>></span>
        <span>@Model.Name</span>
    </div>
    <!--咨询文章-->
    <div class="am-text-center am-padding info-detail">
        <h4>@Model.Name</h4>
        <div class="info-detail-time">@Model.CreateTime</div>
        <artical class="am-margin-top-lg info-detail-content">
            @Html.Raw(Model.StrContent)
        </artical>
    </div>
</div>